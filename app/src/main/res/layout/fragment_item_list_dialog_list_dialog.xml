<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.component.bottom_sheet.TodoAddFragment">

    <LinearLayout
        android:id="@+id/titleArea"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/bottomSheetLine"
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/line"
            android:layout_gravity="center" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:text="Kaydet" />



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:maxHeight="100dp"
            android:paddingStart="16dp"
            android:scrollbars="vertical"
            android:paddingEnd="16dp"
            android:inputType="textCapSentences|textMultiLine|textEnableTextConversionSuggestions"
            android:singleLine="false"
            android:maxLines="10"
            android:hint="Insert Caption"
            android:textStyle="bold"
            android:background="@color/white"
            android:nestedScrollingEnabled="true"
            android:textSize="16sp" />

        <View
            android:id="@+id/titleLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/line" />

    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:nestedScrollingEnabled="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:maxHeight="150dp"
                android:inputType="textCapSentences|textMultiLine|textEnableTextConversionSuggestions"
                android:singleLine="false"
                android:maxLines="10"
                android:gravity="top|start"
                android:hint="Content"
                android:textStyle="normal"
                android:background="@color/white"
                android:nestedScrollingEnabled="true"
                android:textSize="14sp" />


            <View
                android:id="@+id/contentLine"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/line" />

             <LinearLayout
                 android:id="@id/deadlineLine"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"

                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Deadline:"
                     android:textSize="15sp"
                     android:layout_weight="25"
                     android:textColor="@color/color_status_bar"
                     android:padding="8dp" />

                 <Button
                     android:id="@+id/dedlineDate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="25"
                     android:textSize="16dp"
                     android:text="Date"
                     android:layout_marginStart="32dp"/>

                 <Button
                     android:id="@+id/deadlineTime"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="25"
                     android:textSize="16dp"
                     android:text="Time"
                     android:layout_marginStart="32dp"/>

             </LinearLayout>

            <View
                android:id="@+id/deadlineLine"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification:"
                android:textSize="15sp"
                android:textColor="@color/color_status_bar"
                android:padding="8dp" />

            <LinearLayout
                android:id="@+id/navigatonNavhostArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/notificationState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>




                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/navigatonNavhost"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/navigation_state_nav" />




            </LinearLayout>







        </LinearLayout>

    </ScrollView>




</LinearLayout>