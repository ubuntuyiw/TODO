<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TODO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary color (top and bottom bars) -->
        <item name="colorPrimary">@color/color_top_bottom_bar</item>

        <!-- Floating Action Button color -->
        <item name="colorSecondary">@color/color_fab</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/color_status_bar</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorSecondary">@color/color_text_alternate</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/color_background</item>

        <item name="android:navigationBarColor">@color/color_navigation_bar</item>


    </style>

    <style name="CustomCardViewCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="NoBorderTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Theme.TODO" parent="Base.Theme.TODO" />


</resources>